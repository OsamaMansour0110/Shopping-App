<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFunctions.Admin_delete_item"
    android:background="@drawable/admin_category_back">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Update Items"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#251E1E"/>


        <EditText
            android:id="@+id/item_admin_name_update"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true"
            android:hint="New Name"
            android:textColorHint="#3D3E42"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/select_category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/auto_complete_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/select_Item"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/auto_complete_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>



        <EditText
            android:id="@+id/Item_Admin_Price_update"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="380dp"
            android:layout_centerHorizontal="true"
            android:hint="New Price"
            android:textColorHint="#3D3E42" />

        <EditText
            android:id="@+id/Item_Admin_Count_update"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="460dp"
            android:layout_centerHorizontal="true"
            android:hint="Item Count"
            android:textColorHint="#3D3E42" />

        <EditText
            android:id="@+id/Item_Admin_barcode_update"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="540dp"
            android:layout_centerHorizontal="true"
            android:hint="New Barcaode"
            android:textColorHint="#3D3E42" />


        <EditText
            android:id="@+id/Item_Admin_descriptionS_update"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"
            android:hint="New Descriptions"
            android:textColorHint="#3D3E42" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:background="@drawable/login_reg_back" />
        <Button
            android:id="@+id/Update_Itemes"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:background="#00000000"
            android:text="Update"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>




        <ImageView
            android:id="@+id/backpage"
            android:src="@drawable/back"
            android:layout_width="60dp"
            android:background="#00000000"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>