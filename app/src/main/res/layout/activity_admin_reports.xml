<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFunctions.Admin_Reports"
    android:background="@drawable/admin_category_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Users Reports"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="#251E1E"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="Date:"
            android:textSize="30sp"
            android:layout_marginTop="150dp"/>

        <EditText
            android:id="@+id/Date_item"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:hint="dd/MM/yyyy"
            android:textColorHint="#AC7D7D"
            android:textColor="#153511"
            android:textSize="30sp"
            android:layout_marginTop="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="From:"
            android:textSize="30sp"
            android:layout_marginTop="220dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="To:"
            android:textSize="30sp"
            android:layout_marginTop="290dp"/>


        <EditText
            android:id="@+id/Time_item_To"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:hint="hh:mm:ss"
            android:textColorHint="#AC7D7D"
            android:textColor="#D1DCD0"
            android:textSize="30sp"
            android:layout_marginTop="290dp"/>


        <EditText
            android:id="@+id/Time_item_From"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:hint="hh:mm:ss"
            android:textColorHint="#AC7D7D"
            android:textColor="#D1DCD0"
            android:textSize="30sp"
            android:layout_marginTop="220dp"/>


        <Button
            android:id="@+id/add_date"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:layout_marginTop="350dp"
            android:text="Show Items"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

            <ImageView
            android:background="@drawable/bar_pie_back"
                android:layout_width="200dp"
                android:layout_height="50dp"
            android:layout_marginTop="350dp"
            android:layout_centerHorizontal="true"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/Show_item"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/auto_complete_item_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>




        <ImageView
            android:id="@+id/backpage"
            android:src="@drawable/back"
            android:layout_width="60dp"
            android:background="#00000000"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:padding="15dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>